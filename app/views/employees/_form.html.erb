<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :location_id, collection: @locations %>
    <%= f.input :badge %>
    <%= f.input :department_id %>
    <%= f.input :muster_location_id, collection: @muster_locations %>
    <%= f.input :gender %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
